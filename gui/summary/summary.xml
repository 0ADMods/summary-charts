<?xml version="1.0" encoding="utf-8"?>

<!--
==========================================
- POST-GAME SUMMARY SCREEN -
==========================================
-->

<objects>
	<script file="gui/common/functions_global_object.js"/>
	<script file="gui/common/functions_civinfo.js"/>
	<script file="gui/common/functions_utility.js"/>
	<script file="gui/common/settings.js"/>
	<script file="gui/summary/counters.js"/>
	<script file="gui/summary/layout.js"/>
	<script file="gui/summary/summary.js"/>
	<script file="gui/summary/charts.js"/>

	<object type="image"
		style="ModernWindow"
		size="0 0 100% 100%"
	>
		<object style="ModernLabelText" type="text" size="50%-128 4 50%+128 36">
			<translatableAttribute id="caption">Summary</translatableAttribute>
		</object>

		<object size="20 26 100%-20 92">

			<object name="summaryText"
				type="text"
				size="50 16 100%-50 100%-16"
				font="sans-bold-18"
				textcolor="255 255 255"
				text_align="left"
				text_valign="center"
			/>

			<object name="timeElapsed"
				type="text"
				size="50 16 100%-50 100%-16"
				font="sans-bold-18"
				textcolor="255 255 255"
				text_align="right"
				text_valign="center"
			/>

			<object name="mapName"
				type="text"
				size="50 16 100%-50 100%-16"
				font="sans-bold-18"
				textcolor="255 255 255"
				text_align="center"
				text_valign="center"
			/>

		</object>

		<object name="tabDividerLeft" type="image" sprite="TabSpacer" size="172 120 174 122"/>
		<object name="tabDividerRight" type="image" sprite="TabSpacer" size="328 120 330 122"/>

		<object name="scorePanelButton" type="button" sprite="ForegroundTab" size="20 92 136 120">
			<action on="Press">selectPanel(0);</action>
			<object type="text" style="ModernLabelText" ghost="true">
				<translatableAttribute id="caption">Score</translatableAttribute>
			</object>
		</object>

		<object name="buildingsPanelButton" type="button" sprite="BackgroundTab" size="142 92 260 120">
			<action on="Press">selectPanel(1);</action>
			<object type="text" style="ModernLabelText" ghost="true">
				<translatableAttribute id="caption">Buildings</translatableAttribute>
			</object>
		</object>

		<object name="unitsPanelButton" type="button" sprite="BackgroundTab" size="266 92 384 120">
			<action on="Press">selectPanel(2);</action>
			<object type="text" style="ModernLabelText" ghost="true">
				<translatableAttribute id="caption">Units</translatableAttribute>
			</object>
		</object>

		<object name="resourcesPanelButton" type="button" sprite="BackgroundTab" size="390 92 508 120">
			<action on="Press">selectPanel(3);</action>
			<object type="text" style="ModernLabelText" ghost="true">
				<translatableAttribute id="caption">Resources</translatableAttribute>
			</object>
		</object>

		<object name="marketPanelButton" type="button" sprite="BackgroundTab" size="514 92 632 120">
			<action on="Press">selectPanel(4);</action>
			<object type="text" style="ModernLabelText" ghost="true">
				<translatableAttribute id="caption">Market</translatableAttribute>
			</object>
		</object>

		<object name="miscPanelButton" type="button" sprite="BackgroundTab" size="638 92 756 120">
			<action on="Press">selectPanel(5);</action>
			<object type="text" style="ModernLabelText" ghost="true">
				<translatableAttribute id="caption">Miscellaneous</translatableAttribute>
			</object>
		</object>

		<object name="chartPanelButton" type="button" sprite="BackgroundTab" size="762 92 880 120">
			<action on="Press">selectPanel(6);</action>
			<object type="text" style="ModernLabelText" ghost="true">Charts</object>
		</object>

		<object name="generalPanel" type="image" sprite="ForegroundBody" size="20 120 100%-20 100%-54">
			<object size="0 0 100% 100%-50">
				<object name="playerNameHeading" type="text" style="ModernLeftTabLabelText">
					<translatableAttribute id="caption">Player name</translatableAttribute>
				</object>
				<repeat var="x" count="8">
					<object name="titleHeading[x]" type="text" style="ModernTabLabelText">
					</object>
				</repeat>
				<repeat var="x" count="8">
					<object name="Heading[x]" type="text" style="ModernTabLabelText">
					</object>
				</repeat>
			</object>

			<repeat count="4" var="i">
				<object type="image" name="teamBoxt[i]" size="0 65 100% 100%-50" hidden="true">
					<object type="text" name="teamNameHeadingt[i]" size="15 5 100% 100%" style="ModernLeftTabLabelText"/>
					<object size="0 30 100% 100%">
						<repeat count="8" var="n">
							<object type="image" name="playerBoxt[i][n]" size="10 0 10 30" hidden="true">
								<object name="playerColorBoxt[i][n]" type="image" size="10 4 30 24"/>
								<object name="playerNamet[i][n]" type="text"  size="40 2 208 100%" style="ModernLeftLabelText"/>
								<object name="civIcont[i][n]" type="image" size="208 0 240 32"/>
								<repeat var="x" count="8">
									<object name="valueDataTeam[i][n][x]" type="text" style="ModernTabLabelText">
									</object>
								</repeat>
							</object>
						</repeat>
					</object>
					<object name="teamHeadingt[i]" type="text" style="ModernLeftTabLabelText"/>
					<repeat var="x" count="8">
						<object name="valueDataTeam[i][x]" type="text" style="ModernTabLabelText">
						</object>
					</repeat>
				</object>
			</repeat>

			<object type="image" name="noTeamsBox" size="0 65 100% 100%-50" hidden="true">
				<repeat count="8">
					<object type="image" name="playerBox[n]" size="10 0 10 30" hidden="true">
						<object type="image" sprite="ForegroundBox" size="10 4 34 28">
							<object name="playerColorBox[n]" type="image" size="2 2 22 22"/>
						</object>
						<object name="playerName[n]" type="text"  size="40 2 208 100%" style="ModernLeftLabelText"/>
						<object name="civIcon[n]" type="image" size="208 0 240 32"/>
						<repeat var="x" count="8">
							<object name="valueData[n][x]" type="text" style="ModernTabLabelText">
							</object>
						</repeat>
					</object>
				</repeat>
			</object>
		</object>

		<!-- Charts Panel -->
		<object name="chartPanel" type="image" sprite="ForegroundBody" size="20 120 100%-20 100%-58" hidden="true">

			<object size="0 0 100% 100%-30">

				<!-- Menu -->
				<object name="chartMenuUnits" type="button"  size="30 24 100 40">
					<action on="Press">Charts.action(1);</action>
					<object name="chartMenuCaptionUnits" type="text" style="ModernLabelText" ghost="true">Units</object>
				</object>            

				<object name="chartMenuBuildings" type="button" size="90 24 160 40">
					<action on="Press">Charts.action(2);</action>
					<object name="chartMenuCaptionBuildings" type="text" style="ModernLabelText" ghost="true">Buildings</object>
				</object>        

				<object name="chartMenuArea" type="button" size="150 24 220 40">
					<action on="Press">Charts.action(3);</action>
					<object name="chartMenuCaptionArea" type="text" style="ModernLabelText" ghost="true">Area</object>
				</object>        

				<object name="chartMenuFood" type="button" size="210 24 280 40">
					<action on="Press">Charts.action(4);</action>
					<object name="chartMenuCaptionFood" type="text" style="ModernLabelText" ghost="true">Food</object>
				</object>        

				<object name="chartMenuWood" type="button" size="270 24 340 40">
					<action on="Press">Charts.action(5);</action>
					<object name="chartMenuCaptionWood" type="text" style="ModernLabelText" ghost="true">Wood</object>
				</object>        

				<object name="chartMenuStone" type="button" size="330 24 400 40">
					<action on="Press">Charts.action(6);</action>
					<object name="chartMenuCaptionStone" type="text" style="ModernLabelText" ghost="true">Stone</object>
				</object>        

				<object name="chartMenuMetal" type="button" size="390 24 460 40">
					<action on="Press">Charts.action(7);</action>
					<object name="chartMenuCaptionMetal" type="text" style="ModernLabelText" ghost="true">Metal</object>
				</object>        

				<!-- Menu Line -->
				<object name="chartLineHeader" type="image" sprite="chartLineWhite" size="40 42 100%-40 43"/>

				<!-- Players -->
				<object name="chartPlayer" type="text" style="ModernLabelText" size="600 46 680 66" textcolor="200 200 200">Player:</object>  

				<object name="chartPlayer1" type="button" size="670 46 700 66">
					<object name="chartPlayerDot1" type="image" sprite="chartDotP1" size="0 6 8 14" hidden="false"/>
					<object type="text" style="ModernLabelText" ghost="true" textcolor="200 200 200">1</object>
					<action on="Press">Charts.action(null, 1);</action>
				</object>  

				<object name="chartPlayer2" type="button" size="700 46 730 66">
					<object name="chartPlayerDot2" type="image" sprite="chartDotP2" size="0 6 8 14" hidden="false"/>
					<object type="text" style="ModernLabelText" ghost="true" textcolor="200 200 200">2</object>
					<action on="Press">Charts.action(null, 2);</action>
				</object>

				<object name="chartPlayer3" type="button" size="730 46 760 66">
					<object name="chartPlayerDot3" type="image" sprite="chartDotP3" size="0 6 8 14" hidden="false"/>
					<action on="Press">Charts.action(null, 3);</action>
					<object type="text" style="ModernLabelText" ghost="true" textcolor="200 200 200">3</object>
				</object>  

				<object name="chartPlayer4" type="button" size="760 46 790 66">
					<object name="chartPlayerDot4" type="image" sprite="chartDotP4" size="0 6 8 14" hidden="false"/>
					<action on="Press">Charts.action(null, 4);</action>
					<object type="text" style="ModernLabelText" ghost="true" textcolor="200 200 200">4</object>
				</object>  

				<object name="chartPlayer5" type="button" size="790 46 820 66">
					<object name="chartPlayerDot5" type="image" sprite="chartDotP5" size="0 6 8 14" hidden="false"/>
					<action on="Press">Charts.action(null, 5);</action>
					<object type="text" style="ModernLabelText" ghost="true" textcolor="200 200 200">5</object>
				</object>  

				<object name="chartPlayer6" type="button" size="820 46 850 66">
					<object name="chartPlayerDot6" type="image" sprite="chartDotP6" size="0 6 8 14" hidden="false"/>
					<action on="Press">Charts.action(null, 6);</action>
					<object type="text" style="ModernLabelText" ghost="true" textcolor="200 200 200">6</object>
				</object>  

				<object name="chartPlayer7" type="button" size="850 46 880 66">
					<object name="chartPlayerDot7" type="image" sprite="chartDotP7" size="0 6 8 14" hidden="false"/>
					<action on="Press">Charts.action(null, 7);</action>
					<object type="text" style="ModernLabelText" ghost="true" textcolor="200 200 200">7</object>
				</object>  

				<object name="chartPlayer8" type="button" size="880 46 910 66">
					<object name="chartPlayerDot8" type="image" sprite="chartDotP8" size="0 6 8 14" hidden="false"/>
					<action on="Press">Charts.action(null, 8);</action>
					<object type="text" style="ModernLabelText" ghost="true" textcolor="200 200 200">8</object>
				</object>  

				<!-- X/Y Axis -->
				<object name="chartLineAxisX" type="image" sprite="chartLineGray" size="30 540 960 541"/> 
				<object name="chartLineAxisY" type="image" sprite="chartLineGray" size="50 63 51 560"/>
				
				<!-- Y Axis Ticks -->
				<object name="chartTickAxisYMax" type="image" sprite="chartLineGray" size="40 70 50 72"/>
				<object name="chartTickAxisYHalf" type="image" sprite="chartLineGray" size="40 300 50 302"/>
				<object name="chartTickTextYMax" type="text" style="ModernLabelText" text_align = "right" size="5 75 45 90">100</object>
				<object name="chartTickTextYHalf" type="text" style="ModernLabelText" text_align = "right" size="5 305 45 320">50</object>

				<!-- X Axis Ticks -->
				<object name="chartTickAxisXMax" type="image" sprite="chartLineGray" size="922 540 924 550"/>
				<object name="chartTickAxisXHalf" type="image" sprite="chartLineGray" size="475 540 477 550"/>
				<object name="chartTickTextXMax" type="text" style="ModernLabelText" text_align = "right" size="850 540 914 560">100 min</object>
				<object name="chartTickTextXHalf" type="text" style="ModernLabelText" text_align = "right" size="405 540 469 560">50 min</object>

				<!-- Dots -->
				<repeat count="110">
					<object name="chartDot1[n]" type="image" sprite="chartDotP1" size="40 40 48 48" hidden="false"/>
				</repeat>            
			
				<repeat count="110">
					<object name="chartDot2[n]" type="image" sprite="chartDotP2" size="40 40 48 48" hidden="false"/>
				</repeat>            
				
				<repeat count="110">
					<object name="chartDot3[n]" type="image" sprite="chartDotP3" size="40 40 48 48" hidden="false"/>
				</repeat>            
				
				<repeat count="110">
					<object name="chartDot4[n]" type="image" sprite="chartDotP4" size="40 40 48 48" hidden="false"/>
				</repeat>            
				
				<repeat count="110">
					<object name="chartDot5[n]" type="image" sprite="chartDotP5" size="40 40 48 48" hidden="false"/>
				</repeat>            
				
				<repeat count="110">
					<object name="chartDot6[n]" type="image" sprite="chartDotP6" size="40 40 48 48" hidden="false"/>
				</repeat>            
				
				<repeat count="110">
					<object name="chartDot7[n]" type="image" sprite="chartDotP7" size="40 40 48 48" hidden="false"/>
				</repeat>            
				
				<repeat count="110">
					<object name="chartDot8[n]" type="image" sprite="chartDotP8" size="40 40 48 48" hidden="false"/>
				</repeat>            

			</object>
		</object>
		<!-- End Charts panel -->

		<object type="button" style="ModernButtonRed" size="100%-160 100%-48 100%-20 100%-20">
			<translatableAttribute id="caption">Continue</translatableAttribute>
			<action on="Press"><![CDATA[
				if (!Engine.HasXmppClient())
				{
					Engine.SwitchGuiPage("page_pregame.xml");
				}
				else
				{
					Engine.LobbySetPlayerPresence("available");
					Engine.SwitchGuiPage("page_lobby.xml");
				}
				]]>
			</action>
		</object>
	</object>
</objects>
